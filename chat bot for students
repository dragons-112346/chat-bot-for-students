<body>
  <div id="app">

    <div id="nav">
      <button onclick="showPage('home')">ğŸ  Home</button>
      <button onclick="showPage('chatPage')">ğŸ’¬ Chat</button>
      <span id="coins">ğŸª™ Coins: 0</span>
    </div>

    <div id="home" class="page active">
      <h1>ğŸ“ Kâ€“12 Math Tutor</h1>
      <p>Learn math step by step. No skipping.</p>
      <button onclick="showPage('chatPage')">Start Learning</button>
    </div>

    <div id="chatPage" class="page">
      <div id="chat"></div>

      <div id="inputBar">
        <input id="input" placeholder="Paste a math problem or type TOUR" />
        <button onclick="send()">Send</button>
      </div>
    </div>

  </div>

  <script>
    let mode = "idle"; // idle | multiply | algebra
    let step = 0;
    let coins = 0;
    let justFinishedLesson = false;

    let mulA = 0;
    let mulB = 0;
    let zeroCount = 0;

    function updateCoins(amount) {
      coins += amount;
      document.getElementById("coins").textContent = "ğŸª™ Coins: " + coins;
    }

    function showPage(id) {
      document.querySelectorAll(".page").forEach(p => p.classList.remove("active"));
      document.getElementById(id).classList.add("active");
    }

    function addMessage(text, who) {
      const chat = document.getElementById("chat");
      const div = document.createElement("div");
      div.className = who;
      div.textContent = text;
      chat.appendChild(div);
      chat.scrollTop = chat.scrollHeight;
    }

    function send() {
      const input = document.getElementById("input");
      const text = input.value.trim();
      if (!text) return;

      addMessage(text, "user");
      input.value = "";

      setTimeout(() => handle(text.toLowerCase()), 300);
    }

    function handle(t) {

      if (t === "tour") {
        addMessage("ğŸ‘‹ I teach Kâ€“12 math step by step.", "bot");
        addMessage("âœï¸ You must answer each step. No skipping.", "bot");
        return;
      }

      if (mode === "idle" && (t === "hi" || t === "hello")) {
        if (justFinishedLesson) {
          addMessage("ğŸ˜Š Want another problem? Paste one anytime!", "bot");
          justFinishedLesson = false;
        } else {
          addMessage("ğŸ‘‹ Hi! Paste a math problem to start.", "bot");
        }
        return;
      }

      // STEP-BY-STEP MULTIPLICATION
      if (mode === "idle" && t.match(/^\\d+\\s*[x\\*]\\s*\\d+$/)) {
        const parts = t.replace("x", "*").split("*");
        mulA = Number(parts[0]);
        mulB = Number(parts[1]);

        zeroCount =
          (parts[0].match(/0/g) || []).length +
          (parts[1].match(/0/g) || []).length;

        mode = "multiply";
        step = 1;
        justFinishedLesson = false;

        addMessage("ğŸ“˜ Letâ€™s multiply step by step.", "bot");
        addMessage("Step 1: Ignore the zeros.", "bot");
        addMessage("What is 2 Ã— 3 ?", "bot");
        return;
      }

      if (mode === "multiply" && step === 1) {
        if (Number(t) === 6) {
          addMessage("âœ… Correct!", "bot");
          step = 2;
          addMessage("Step 2: How many zeros total?", "bot");
          return;
        }
        addMessage("âŒ Try again.", "bot");
        return;
      }

      if (mode === "multiply" && step === 2) {
        if (Number(t) === zeroCount) {
          addMessage("ğŸ‰ Correct!", "bot");
          addMessage(`ğŸ“˜ Final Answer: ${mulA * mulB}`, "bot");
          addMessage("ğŸ† +10 coins!", "bot");
          updateCoins(10);
          mode = "idle";
          justFinishedLesson = true;
          return;
        }
        addMessage("âŒ Count the zeros again.", "bot");
        return;
      }

      // ALGEBRA
      if (mode === "idle" && t.includes("g") && t.includes("=")) {
        mode = "algebra";
        step = 1;
        justFinishedLesson = false;

        addMessage("ğŸ“˜ Letâ€™s solve step by step.", "bot");
        addMessage("ğŸ¯ Goal: isolate g.", "bot");
        addMessage("Step 1: What cancels âˆ’3g?", "bot");
        return;
      }

      if (mode === "algebra" && step === 1) {
        if (t.includes("3g")) {
          addMessage("âœ… Correct!", "bot");
          step = 2;
          addMessage("Step 2: Combine the g terms.", "bot");
          return;
        }
        addMessage("âŒ Try again.", "bot");
        return;
      }

      if (mode === "algebra" && step === 2) {
        if (t.includes("2.5")) {
          addMessage("âœ… Correct! 2.5g = 0.25", "bot");
          step = 3;
          addMessage("Step 3: How do we isolate g?", "bot");
          return;
        }
        addMessage("âŒ Check your math.", "bot");
        return;
      }

      if (mode === "algebra" && step === 3) {
        if (t.includes("divide") || t.includes("2.5")) {
          addMessage("ğŸ‰ Final Answer: g = 0.1", "bot");
          addMessage("ğŸ† +10 coins!", "bot");
          updateCoins(10);
          mode = "idle";
          justFinishedLesson = true;
          return;
        }
        addMessage("âŒ Hint: divide both sides.", "bot");
        return;
      }

      addMessage("ğŸ¤” I didnâ€™t understand. Try a math problem.", "bot");
    }

    document.addEventListener("DOMContentLoaded", () => {
      addMessage("ğŸ‘‹ Hi! Paste a problem to start, or type TOUR.", "bot");
    });
  </script>
